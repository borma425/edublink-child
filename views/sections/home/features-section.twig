    <script>
    (function() {
        let activeSlide = 0;
        let isAutoPlaying = true;
        let autoPlayInterval;
        let pauseTimeout;
        const totalSlides = 3;

        const slides = [
            document.getElementById('startrightSlide0'),
            document.getElementById('startrightSlide1'),
            document.getElementById('startrightSlide2')
        ];
        const prevBtn = document.getElementById('startrightPrevBtn');
        const nextBtn = document.getElementById('startrightNextBtn');

        if (!slides[0] || !prevBtn || !nextBtn) return;

        function updateSlides() {
            slides.forEach((slide, index) => {
                if (index === activeSlide) {
                    slide.classList.add('startright-slide-active');
                } else {
                    slide.classList.remove('startright-slide-active');
                }
            });
        }

        function nextSlide() {
            activeSlide = (activeSlide + 1) % totalSlides;
            updateSlides();
        }

        function prevSlide() {
            activeSlide = (activeSlide - 1 + totalSlides) % totalSlides;
            updateSlides();
        }

        function startAutoPlay() {
            if (autoPlayInterval) clearInterval(autoPlayInterval);
            autoPlayInterval = setInterval(nextSlide, 3000);
        }

        function handleManualNavigation(direction) {
            isAutoPlaying = false;
            clearInterval(autoPlayInterval);
            clearTimeout(pauseTimeout);
            
            if (direction === 'next') nextSlide();
            else prevSlide();
            
            // Restart autoplay after 5 seconds of inactivity
            pauseTimeout = setTimeout(function() {
                isAutoPlaying = true;
                startAutoPlay();
            }, 5000);
        }

        prevBtn.addEventListener('click', function() {
            handleManualNavigation('prev');
        });

        nextBtn.addEventListener('click', function() {
            handleManualNavigation('next');
        });

        // Start autoplay
        startAutoPlay();
    })();
    </script>
